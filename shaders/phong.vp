#version 330 core

uniform mat4 model;
uniform mat4 view;
uniform mat4 proj;


in vec3 vertexPosition;
in vec3 aNormal;

	  
out vec3 Normal;
out vec3 FragPos;

void main()
{
	gl_Position = proj * view * model * vec4(vertexPosition, 1.0f);
	FragPos = vec3( model * vec4(vertexPosition, 1.0f));
	Normal = mat3(transpose(inverse(model))) * aNormal;
}  